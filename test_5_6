#define _CRT_SECURE_NO_WARNINGS 1

#include <stdio.h>

int main()
{
	//真 - 非0
	//假 - 0
	//&& - 逻辑与
	//|| - 逻辑或 
	int a = 3;
	int b = 5;
	int c = a && b;
	printf("%d\n", c);
	return 0;
}

